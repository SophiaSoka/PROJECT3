  ifstream file(fname);
  string line;
  
  // skip header
  file.getline(line);
  file.getline(line);
  
  // read the rest
  while(file.getline(line))
  {
  // split into parts
  Leader leader(the parts);
  leaders.push_back(leader);
  }
